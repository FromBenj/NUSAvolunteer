{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
{% block body %}
<div class="py-2">
    <div class="navbar-brand px-5 m-0">
        <a href="{{ path('app_home') }}">
            <img class="rounded-circle p-1 bg-white" src="{{ asset('build/images/NUSAvolunteer/NUSAvolunteer_logo_final.svg') }}" alt="NUSAvolunteer logo" width="60" height="auto">
        </a>
    </div>
    <div class="d-flex justify-content-center">
        <div class="w-50">
            <h1 class="h3 mb-3 font-weight-normal">Register</h1>
            {{ form_start(registrationForm) }}
                {{ form_widget(registrationForm) }}
                {{ form_errors(registrationForm) }}
                <button class="btn btn-lg main-button {{ buttonColor }} {{bodyColor}}" type="submit">Envoyer</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>

{% endblock %}
