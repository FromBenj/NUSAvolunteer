{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="py-2">
        <div class="d-flex justify-content-center">
            <div class="w-50">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    <label for="password">Password</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    {% if userCategory is defined and userCategory is not null %}
                        {% if userCategory == "volunteer" %}
                            {% set bt_bg = 'organisation-login' %}
                        {% endif %}
                        {% if userCategory == "organisation" %}
                            {% set bt_bg = 'volunteer-login' %}
                        {% endif %}
                    {% else %}
                        {% set bt_bg = "" %}
                    {% endif %}
                    <input type="hidden" name="_target_path" value="{{ path('app_login_distribution') }}"/>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-lg {{bt_bg}}" type="submit">
                            Sign in
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
